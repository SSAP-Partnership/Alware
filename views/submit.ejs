<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN"
        "http://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
<head>
    <title>Alware - Submit</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Nathan Ben-David">
    <meta name="description" content="The best way to schedule meetings since sliced bread.">

    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <link rel="stylesheet" href="/stylesheets/submit.css">
    <script src="/javascripts/submit.js"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">

    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.min.js'></script>
    <link href="/stylesheets/fullcalendar.css" rel="stylesheet">
</head>
<body>
<div id="container">
    <div id="header">
        <div class="logo">
            <img src="images/logo_text.png" alt="">
        </div>
    </div>
    <div id="hero">
        <div id="submitForm">
            <form onsubmit="return false;" id="scheduleForm" autocomplete="off">
                <h1>Submit Schedule</h1>
                <hr>
                <div class="row">
                    <div class="col-25"><label for="name">Name</label></div>
                    <div class="col-75"><input type="text" id="formName" name="name" placeholder="(OPTIONAL)"></div>
                </div>
                <div class="row">
                    <div class="col-25"><label for="other">Other</label></div>
                    <div class="col-75"><textarea id="formOther" name="other" placeholder="(OPTIONAL)"
                                                  style="height:400px" form="scheduleForm"></textarea></div>
                </div>
                <div class="row">
                    <input id="formSubmit" type="submit" value="Submit">
                </div>
            </form>
            <hr>
            <br>
            <button id="resultBtn">View Results</button>
            <button id="shareBtn">Share</button>
            <button id="homeBtn">Home</button>
            <br>
            <span id="btnBarError"></span>
        </div>
        <div id="timeSelector">
            <div id='calendar'></div>
        </div>
    </div>
</div>

<div id="loginModal" class="modal">
    <form class="modalContent" onsubmit="return false;" autocomplete="off">
        <h1>Login</h1>
        <p>Please fill in this form to access the room.</p>
        <hr>

        <label for="password"><b>Password</b></label>
        <input id="modalPassword" type="password" placeholder="Enter Password" name="password" required>

        <div class="modalButtons">
            <button type="button" id="modalCancel">Cancel</button>
            <button type="submit" id="modalSubmit">Join</button>
        </div>

        <span id="loginError"></span>
    </form>
</div>
</body>
</html>
